<!--                        app:layout_constraintTop_toTopOf="@+id/yazar"/>-->
                    <TextView
                        android:id="@+id/cevirmenAd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Çevirmen:"
                        app:layout_constraintStart_toStartOf="@+id/yazar"
                        app:layout_constraintTop_toBottomOf="@+id/yazar"  />

                    <TextView
                        android:id="@+id/cevirmen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        app:layout_constraintStart_toEndOf="@+id/cevirmenAd"
                        app:layout_constraintTop_toTopOf="@+id/cevirmenAd"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/BookDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25/24/5802"
                        app:layout_constraintStart_toStartOf="@+id/cevirmenAd"
                        app:layout_constraintTop_toBottomOf="@+id/cevirmenAd"  />

                    <View
                        android:id="@+id/viewDivider"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="#000"
                        app:layout_constraintTop_toBottomOf="@+id/kitap_poster"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/kitap_hakkinda"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Açıklama"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewDivider" />



                </androidx.constraintlayout.widget.ConstraintLayout>

